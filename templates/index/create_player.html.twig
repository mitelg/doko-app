{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'title'|trans({}, 'create_player') }}</h1>

    {{ form_start(playerForm, {'attr': {'class': 'form-horizontal form-group'}}) }}
    {% if not playerForm.vars.valid %}
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="btn-danger col-sm-10">
                {{ form_errors(playerForm.name) }}
            </div>
        </div>
    {% endif %}
    <div class="form-group">
        {{ form_label(playerForm.name, 'label'|trans({}, 'create_player') , {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(playerForm.name, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_widget(playerForm.save, {'attr': {'class': 'btn btn-lg btn-primary'}}) }}
    </div>
    {{ form_end(playerForm) }}
    <div class="form-group btn-group-lg">
        <a href="{{ path('mitelg_dokoapp_doko_index') }}" class="btn btn-primary">{{ 'homepage'|trans({}, 'buttons') }}</a>
    </div>
{% endblock %}
