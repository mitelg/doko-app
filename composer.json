{
    "name": "mt/doko.app",
    "license": "MIT",
    "type": "project",
    "description": "small web app to save points for players of the german card game 'Doppelkopf'",
    "keywords": ["symfony", "doppelkopf"],
    "require": {
        "php": "^7.1.3",
        "ext-iconv": "*",
        "knplabs/knp-paginator-bundle": "2.8.0",
        "sensio/framework-extra-bundle": "5.2.0",
        "symfony/apache-pack": "^1.0",
        "symfony/asset": "4.1.4",
        "symfony/console": "4.1.4",
        "symfony/dotenv": "4.1.4",
        "symfony/flex": "1.1.1",
        "symfony/form": "4.1.4",
        "symfony/framework-bundle": "4.1.4",
        "symfony/orm-pack": "1.0.5",
        "symfony/translation": "4.1.4",
        "symfony/twig-bundle": "4.1.4",
        "symfony/validator": "4.1.4",
        "symfony/web-server-bundle": "4.1.4",
        "symfony/yaml": "4.1.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "2.13.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "./.githooks/install_hooks.sh"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "id": "01C50GDEDXDFSYH6FBWZCZYHPB",
            "allow-contrib": false
        }
    }
}
